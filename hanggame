<script type="text/javascript">
var words = ["r o b o t ","a g e n t ","c o g n i t i v e ","a u t o m a t a ","c h a t b o t ","h e u r i s t i c s ","f u z z y ","l i s p ","l o g i s t i c s ","m e c h a t r o n i c s ","p r o l o g ","h u m a n o i d ","b o t s ","s e a r c h ","c h a i n i n g ","e n t a i l m e n t ","p r u n i n g ","p e r c e p t ","s h e l l ","g a m i n g ","r e a s o n i n g ","a c t u a t o r ","s e n s o r ","n e u r a l n e t w o r k ","k n o w l e d g e b a s e "];
    var word = words[Math.floor(Math.random() * words.length)];
    var answerArray = [];
    for (var i = 0; i < word.length; i++) {
      answerArray[i] = "_";
    }
    var count=0;
    while(count<5 && answerArray.includes("_") {
      alert(answerArray.join(" "));
      var guess = prompt("Guess a letter:");
      if (guess == null) {
        break;
      } 
      else if (guess.length != 1) {
        alert("Please enter a single letter.");
      } 
      else {
        for (var j = 0; j < word.length; j++) {
          if (word[j] == guess) {
            answerArray[j] = guess;
          }
          else{
            count++;
            image();
          }
        } 
      }
    }
    if(answerArray == word){
     alert(answerArray.join(" "));
     alert("Good job! The answer was " + word);
    }
</script>
